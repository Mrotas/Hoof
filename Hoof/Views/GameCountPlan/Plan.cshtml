@model Domain.GameCountPlan.ViewModels.CountPlanViewModel

@{
    ViewBag.Title = "Plan";
}

<br />

<h4 style="text-align: center">Szacowana liczebność zwierząt na 10.03.@Model.MarketingYearStart.Year</h4>

<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>
            Lp.
        </th>
        <th>
            Zwierzyna
        </th>
        <th>
            Rodzaj
        </th>
        <th>
            Klasa
        </th>
        <th>
            Liczebność
        </th>
        <th>
            Zarządzaj
        </th>
    </tr>

    @foreach (var item in Model.GameCountPlanViewModels)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameKindName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameSubKindName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
