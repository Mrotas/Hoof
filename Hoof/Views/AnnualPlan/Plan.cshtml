    <script type="text/javascript">

        $('#bodyContainer').css('width', '75%');

        $(document).ready(function() {
            $('#bigGameTable tr').each(function() {
                $.each(this.cells,
                    function(i, item) {
                        var text = item.innerText;
                        if (text === "0") {
                            item.innerText = "";
                        }
                    });
            });
        });

        $(document).ready(function() {
            $('#smallGameTable tr').each(function() {
                $.each(this.cells,
                    function(i, item) {
                        var text = item.innerText;
                        if (text === "0") {
                            item.innerText = "";
                        }
                    });
            });
        });

        $(document).ready(function() {
            var config = {};
            config.CurrentMarketingYearModel = {
                Id: @Model.CurrentMarketingYearModel.Id,
                MarketingYear: '@Model.CurrentMarketingYearModel.ToString()',
                StartYear: @Model.CurrentMarketingYearModel.Start.Year
            };
            var annualPlanGenerator = new AnnualPlanGenerator(config);
        });

    </script>
}

