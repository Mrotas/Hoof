<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Roczny plan
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Dokument", "Index", "AnnualPlan")</li>
                            <li>@Html.ActionLink("Gospodarka łowiecka", "Index", "AnnualPlan")</li>
                            <li>@Html.ActionLink("Przychody/Koszty", "Index", "AnnualPlan")</li>
                            <li>@Html.ActionLink("Pozyskanie zwierzyny", "Index", "AnnualPlan")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Meldunek", "Index", "AnnualPlan")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Polowania
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Wszystkie polowania", "Index", "Hunt")</li>
                            <li>@Html.ActionLink("Moje polowania", "MyHunts", "Hunt")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Ubytki", "Loss", "Hunt")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" id="bodyContainer">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
