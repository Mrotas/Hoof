@model Domain.CostPlan.ViewModels.CostPlanBaseViewModel

@{
    ViewBag.Title = "Plan";
}

<br />

<h4 style="text-align: center">Plan kosztów gospodarki koła łowieckiego na rok gospodarczy @Model.MarketingYear</h4>

<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>
            Lp.
        </th>
        <th>
            Nazwa
        </th>
        <th>
            Złotych
        </th>
        <th>
            Zarządzaj
        </th>
    </tr>

    @foreach (var item in Model.CostPlanViewModels)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
